<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_interventions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="istic.fr.droneproject.activities.UserInterventionsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ui_list_interventions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ui_layout_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Détails de l'intervention"
                android:textAlignment="center"
                android:textColor="@color/fbutton_color_green_sea"
                android:textSize="28sp" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/ui_btn_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:layout_weight="0"
                android:clickable="true"
                android:src="@drawable/ic_information_variant"
                app:fabSize="normal" />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:text="Libellé"
                android:textColor="@color/fbutton_color_green_sea"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ui_text_libelle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:text="Adresse"
                android:textColor="@color/fbutton_color_green_sea"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ui_text_adresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:text="Position"
                android:textColor="@color/fbutton_color_green_sea"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ui_text_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:text="Date"
                android:textColor="@color/fbutton_color_green_sea"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ui_text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:text="Code sinistre"
                android:textColor="@color/fbutton_color_green_sea"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ui_text_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="Moyens"
                android:textColor="@color/fbutton_color_green_sea"
                android:textSize="20dp"
                android:layout_rowWeight="0" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ui_list_vehicules"
                android:layout_width="272dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:layout_height="0dp"
                android:layout_gravity="fill_vertical" />


        </GridLayout>
    </LinearLayout>
</LinearLayout>

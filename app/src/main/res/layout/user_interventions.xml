<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_interventions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="istic.fr.droneproject.UserInterventionsActivity"
    android:orientation="horizontal">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ui_list_interventions"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ui_layout_details"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp">

            <TextView
                android:text="Détails de l'intervention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_weight="1" />

            <Button
                android:text="Sélectionner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ui_btn_select"
                android:layout_weight="0" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2">

            <TextView
                android:text="Libellé"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ui_text_libelle"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginBottom="15sp" />

            <TextView
                android:text="Adresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ui_text_adresse"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginBottom="15sp"  />

            <TextView
                android:text="Position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ui_text_position"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginBottom="15sp"  />

            <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ui_text_date"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginBottom="15sp" />

            <TextView
                android:text="Code sinistre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ui_text_code"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginBottom="15sp"  />

            <TextView
                android:text="Moyens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ui_list_vehicules" />


        </GridLayout>
    </LinearLayout>
</LinearLayout>

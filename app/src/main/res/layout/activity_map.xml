<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/m_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="32dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="istic.fr.droneproject.activities.MapActivity">


    <LinearLayout
        android:id="@+id/m_menu_vehicules"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="1">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/m_list_vehicules_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom|right"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/ic_plus" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/m_list_vehicules"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_menu_points"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/m_list_points"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_menu_choix"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/m_menu_choix_points"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/Points" />

        <Button
            android:id="@+id/m_menu_choix_vehicules"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:layout_weight="1"
            android:text="@string/Moyens" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_menu_Actionvehicule"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/m_menu_Actionvehicule_deplacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/deplacer" />

        <Button
            android:id="@+id/m_menu_Actionvehicule_confirmer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:layout_weight="1"
            android:text="@string/confirmer" />

        <Button
            android:id="@+id/m_menu_Actionvehicule_liberer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:layout_weight="1"
            android:text="@string/liberer" />

        <Button
            android:id="@+id/m_menu_Actionvehicule_parking"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/parking" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_menu_Actionpoint"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/m_menu_Actionpoint_supprimer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/supprimer" />

        <Button
            android:id="@+id/m_menu_Actionpoint_deplacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:layout_weight="1"
            android:text="@string/deplacer" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_menu_Actiondrone"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/m_menu_Actiondrone_segment_b"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/drone_segment" />

        <Button
            android:id="@+id/m_menu_Actiondrone_exclusion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:layout_weight="1"
            android:text="@string/drone_exclusion" />

        <Button
            android:id="@+id/m_menu_Actiondrone_zone_b"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:layout_weight="1"
            android:text="@string/drone_zone" />

        <Button
            android:id="@+id/m_menu_Actiondrone_stop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:layout_weight="1"
            android:text="@string/drone_stop" />

        <Button
            android:id="@+id/m_menu_Actiondrone_parking"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:layout_weight="1"
            android:text="@string/drone_parking" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_menu_Actiondrone_segment"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/m_menu_Actiondrone_segment_supplast"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/drone_supplast" />

        <Button
            android:id="@+id/m_menu_Actiondrone_segment_boucle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:layout_weight="1"
            android:text="@string/drone_boucle" />

        <Button
            android:id="@+id/m_menu_Actiondrone_segment_fin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/drone_fin" />

        <Button
            android:id="@+id/m_menu_Actiondrone_segment_annule"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/drone_annule" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_menu_Actiondrone_zone"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/m_menu_Actiondrone_zone_supplast"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/drone_supplast" />

        <Button
            android:id="@+id/m_menu_Actiondrone_zone_fin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/drone_fin" />

        <Button
            android:id="@+id/m_menu_Actiondrone_zone_annule"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/drone_annule" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/m_linearmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <fragment
            android:id="@+id/m_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0"
            tools:context=".activities.MapActivity" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/m_map_reloaddrone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="16dp"
            app:elevation="4dp"
            app:layout_anchorGravity="bottom|right|end"
            android:clickable="true"
            android:src="@drawable/drone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/m_map_filtre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right|fill_horizontal"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_manage"
            app:elevation="24dp"
            app:layout_anchorGravity="bottom|right|end" />

    </FrameLayout>


</LinearLayout>
